<a class="my-auto btn btn-danger btn-sm checked" asp-page="/EditProduct">Remove or Change a product</a>













<form method="post">

    <div class="my-4 text-center">
        <h4>Enter a product Id</h4>
        <input type="text" asp-for="@Model.SearchId" placeholder="id:" />
        <button type="submit">
            Submit
        </button>
    </div>


    <div>
        @if (!Model.IdMatch) //Failed to find product with given ID
        {
            <h5 class="text-center text-danger">There was no product with that ID!</h5>
        }
        else //Successfully found product with given ID
        {
            <h5 class="text-center text-success">Product found! Article: @Model.SearchId</h5>

            <div>
                <input type="text" asp-for="@Model.NewName" placeholder="@Model.Product.Name" />
            </div>
            <div>
                <input type="number" asp-for="@Model.NewPrice" placeholder="@Model.Product.Price" />
                Pris(kr)
            </div>
            <div>
                <input type="number" asp-for="@Model.NewAgeRestriction" placeholder="Åldersgräns" />
                Åldersgräns
            </div>
            <div>
                <input type="text" asp-for="@Model.NewPlatform" placeholder="Platform tex. Xbox 360, Playstation 4, Nintendo DS" />
            </div>
            <div>
                <input type="text" asp-for="@Model.NewDescription" placeholder="@Model.Product.Description" />
            </div>
            <div>
                <input type="number" asp-for="@Model.NewStock" placeholder="Model.Product.Stock" />
            </div>
            <div>
                <input type="text" asp-for="@Model.NewGenre" placeholder="Genre" />
            </div>
            <div>
                <input type="text" asp-for="@Model.NewReleaseDate" placeholder="Releasedatum" />
            </div>
            <div>
                <input class="box-shadow" type="text" asp-for="@Model.NewStudio" placeholder="Studio" />
            </div>
            <div>
                <input type="number" asp-for="@Model.NewCriticScore" placeholder="Betyg" />
            </div>
            <div>
                <input type="text" asp-for="@Model.NewImageURL" placeholder="@Model.Product.ImageURL" />
            </div>
            <button class="btn btn-primary" type="submit" asp-route-saveChanges="true">Save Changes</button>

        }
    </div>


</form>